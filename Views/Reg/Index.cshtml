@model UserSignupModel
@{
    ViewData["Title"] = "Sign-Up Page";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="w-100" style="max-width: 600px;">
        <div class="card bg-secondary text-white border-dark">
            <div class="card-body">
                <h3 class="card-title text-center text-dark">Sign Up</h3>
                <form asp-controller="Reg" asp-action="Register" method="post" class="form-signup">
                    <div class="form-group">
                        <label for="Username" class="text-dark">Username:</label>
                        <input asp-for="Username" type="text" class="form-control bg-dark text-white" id="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Password" class="text-dark">Password:</label>
                        <input asp-for="Password" type="password" class="form-control bg-dark text-white" id="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="ConfirmPassword" class="text-dark">Confirm Password:</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control bg-dark text-white" id="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="FirstName" class="text-dark">First Name:</label>
                        <input asp-for="FirstName" type="text" class="form-control bg-dark text-white" id="FirstName" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="LastName" class="text-dark">Last Name:</label>
                        <input asp-for="LastName" type="text" class="form-control bg-dark text-white" id="LastName" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-light">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<style>
    body {
        background-color: #dddddd;
    }

    .card-body {
        background-color: gray;
    }

    button {
        color: white !important;
        background-color: #000000 !important;
        transition-duration: 0.5s;
    }

        button:hover {
            background-color: #2c2c2c !important
        }

    body, html {
        height: 100%;
        width: 100%;
        margin-bottom: 0px;
    }

    .pb-3 {
        padding: 0px !important;
    }

</style>