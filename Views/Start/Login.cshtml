@model UserLoginModel
@{
    ViewData["Title"] = "Login Page";
}
@if (TempData["AlertMessage"] != null)
{
    <script>
        alert('@TempData["AlertMessage"]');
    </script>
}
<div class="d-flex justify-content-center align-items-center vh-100" id="div">
    <div class="w-100" style="max-width: 400px;">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">Login</h3>
                <form asp-controller="Start" asp-action="Login" method="post">
                    <div class="form-group">
                        <label for="Username">Username:</label>
                        <input asp-for="Username" type="text" id="Username" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Password">Password:</label>
                        <input asp-for="Password" type="password" id="Password" class="form-control" />
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-secondary" style="margin-top: 10px">Login</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center mt-3">
            <form asp-controller="Start" asp-action="Signup" method="get">
                <button type="submit" class="btn btn-outline-secondary">Sign Up!</button>
            </form>
        </div>
    </div>
</div>
<style>
    body{
        background-color: #dddddd;
    }
    .card-body
    {
        background-color: gray;
    }
    button {
        color: white !important;
        background-color: #000000 !important;
        transition-duration: 0.5s;
    }
    button:hover {
            background-color: #2c2c2c !important

    }
    body, html {
        height: 100%;
        width: 100%;
        margin-bottom: 0px;
    }
    .pb-3 {
        padding: 0px !important;
    }

   
</style>







